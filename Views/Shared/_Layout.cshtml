<!DOCTYPE html>
<html>
<head>

<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
       .titulo{
           color:gold;
           text-align:center;
           font-family:'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
           font-size:xx-large;
       }
        .item-navegacion {
            text-decoration: none;
            font-size: medium;
        }
        .item-navegacion:hover{
            color:yellow;
            background-color:white;
         }
        
    </style>
</head>
<body class="col-sm-10">
    <!--Barra de navegacion-->
    <nav class="navbar navbar-expand-lg navbar-dark navprincipal">
        <div class="container-fluid lg">
            <a class="navbar-brand text-light" href="#">Cine +</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav ">
                    <li class="nav-link menu item-navegacion ">

                        @Html.ActionLink("Peliculas", "Index")
                    </li>
                    <li class="nav-link menu item-navegacion">@Html.ActionLink("Estadisticas", "Estadisticas")</li>
                    <li class="nav-link menu item-navegacion">@Html.ActionLink("Acerca de", "Acerca")</li>
                    <li class="nav-link menu item-navegacion">@Html.ActionLink("Crear nueva cartelera", "Create")</li>
                </div>
            </div>
        </div>
    </nav>
    <!--Banner-->
    <div class="banner">
        <img class="banner" src="https://img.freepik.com/vector-premium/cine-banner-retro-pelicula-proyector-strip-film_48369-10520.jpg?w=2000" alt="">
    </div>
    <!--Cuerpo de la pagina-->
    <div class="row centered bg-light">
        @RenderBody()
    </div>
    <!--Pie de pagina-->
    <footer id="footer" class="text-light py-3 px-3">
        <div class="titulo">
            Todos los derechos reservados UDB cine+ | Tecnico en ingenieria en computacion |UDB| ©️2023
        </div>
    </footer>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/mybundle")
    @RenderSection("scripts", required: false)
</body>
</html>
